@model Ass1.ViewModels.CategoryViewModel

<form asp-action="Create" method="post" id="form-data" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Category Name -->
    <div class="form-group mb-3">
        <label asp-for="CategoryName" class="form-label">Category Name</label>
        <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <!-- Category Description -->
    <div class="form-group mb-3">
        <label asp-for="CategoryDescription" class="form-label">Description</label>
        <textarea asp-for="CategoryDescription" class="form-control" placeholder="Enter category description"></textarea>
        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
    </div>

    <!-- Parent Category -->
    <div class="form-group mb-3">
        <label asp-for="ParentCategoryId" class="form-label">Parent Category (Optional)</label>
        <select asp-for="ParentCategoryId" class="form-select" asp-items="ViewBag.ParentCategoryId">
            <option value="">None</option>
        </select>
        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
    </div>

    <!-- Is Active -->
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
    </div>
</form>