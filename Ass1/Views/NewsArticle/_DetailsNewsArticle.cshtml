@model Ass1.ViewModels.NewsArticleViewModel


<h5 class="mb-3">@Model.NewsTitle</h5>

<small class="text-muted">
    Published on @(Model.CreatedDate?.ToString("yyyy-MM-dd") ?? "Unknown Date") by @Model.CreatedBy
</small>
@if (!string.IsNullOrEmpty(Model.UpdatedBy))
{
    <br />
    <small class="text-muted">
        Last updated on @(Model.ModifiedDate?.ToString("yyyy-MM-dd") ?? "Unknown Date") by @Model.UpdatedBy
    </small>
}

@if (Model.Category != null)
{
    <div class="mb-2">
        <strong>Category:</strong>
        <span class="badge bg-secondary">@Model.Category.CategoryName</span>
    </div>
}

<p>@Model.NewsContent</p>

@if (!string.IsNullOrEmpty(Model.NewsSource))
{
    <div class="mt-3">
        <strong>Source:</strong>
        <a href="@Model.NewsSource" target="_blank" rel="noopener noreferrer">@Model.NewsSource</a>
    </div>
}

<div class="mt-3">
    <strong>Status:</strong>
    <span class="badge @(Model.NewsStatus ? "bg-success" : "bg-warning")">
        @(Model.NewsStatus ? "Active" : "Inactive")
    </span>
</div>

<div class="mt-3">
    <strong>Tags:</strong>
    @if (Model.SelectedTags != null && Model.SelectedTags.Any())
    {
        foreach (var tag in Model.SelectedTags)
        {
            <span class="badge bg-secondary">@tag.TagName</span>
        }
    }
    else
    {
        <span class="text-muted">No tags available</span>
    }
</div>