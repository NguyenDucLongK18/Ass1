@model Ass1.ViewModels.NewsArticleViewModel

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="NewsArticleId" />

    <div class="form-group">
        <label asp-for="NewsTitle"></label>
        <input asp-for="NewsTitle" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Headline"></label>
        <input asp-for="Headline" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="NewsContent"></label>
        <textarea asp-for="NewsContent" class="form-control" rows="5"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="NewsSource"></label>
        <input asp-for="NewsSource" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SelectedCategoryId">Category</label>
        <select asp-for="SelectedCategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))" class="form-control">
            <option value="">Select a category</option>
        </select>
    </div>

    <div class="form-group">
        <label>Tags</label>
        @foreach (var tag in ViewBag.Tags)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedTagIds" value="@tag.TagId" class="form-check-input"
                @(Model.SelectedTagIds.Contains(tag.TagId) ? "checked" : "") />
                <label class="form-check-label">@tag.TagName</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label>Status</label>
        <input type="checkbox" asp-for="NewsStatus" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
