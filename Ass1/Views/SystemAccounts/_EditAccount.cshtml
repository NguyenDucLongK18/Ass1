@model Ass1.ViewModels.SystemAccountViewModel

<form asp-action="Edit" id="form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="AccountId" />

    <div class="form-group mb-3">
        <label asp-for="AccountName" class="control-label font-weight-bold text-muted"></label>
        <input asp-for="AccountName" class="form-control" placeholder="Enter Account Name" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AccountEmail" class="control-label font-weight-bold text-muted"></label>
        <input asp-for="AccountEmail" class="form-control" placeholder="Enter Account Email" />
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AccountRole" class="control-label font-weight-bold text-muted"></label>
        <select asp-for="AccountRole" class="form-control">
            <option value="">-- Select Role --</option>
            <option value="1" selected="@((Model.AccountRole == 1) ? true : null)" )>Staff</option>
            <option value="2" selected="@((Model.AccountRole == 2) ? true : null)" )>Lecturer</option>
        </select>
        <span asp-validation-for="AccountRole" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AccountPassword" class="control-label font-weight-bold text-muted"></label>
        <input asp-for="AccountPassword" class="form-control" type="text" placeholder="Enter Password" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary btn-block" />
    </div>
</form>